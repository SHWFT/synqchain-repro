{
  "name": "synqchain-mvp",
  "version": "1.0.0",
  "description": "SynqChain MVP - Supply Chain Management Platform",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "npm run test:unit && npm run test:e2e:api",
    "test:unit": "cd apps/api && npm run test",
    "test:e2e:api": "cd apps/api && npm run test:e2e",
    "test:e2e:web": "playwright test",
    "test:smoke": "playwright test --project=chromium",
    "lint": "npm run lint:api",
    "lint:api": "cd apps/api && npm run lint",
    "typecheck": "cd apps/api && npm run build",
    "seed": "cd apps/api && npm run prisma:seed",
    "reset:db": "cd apps/api && npx prisma migrate reset --force"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "playwright": "^1.55.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}