{
  "name": "synqchain-mvp",
  "version": "1.0.0",
  "description": "SynqChain MVP - Supply Chain Management Platform",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "npm run test:unit && npm run test:e2e:api",
    "test:unit": "cd apps/api && npm run test",
    "test:e2e:api": "cd apps/api && npm run test:e2e",
    "test:e2e:web": "playwright test",
    "test:smoke": "playwright test --project=chromium",
    "lint": "npm run lint:api",
    "lint:api": "cd apps/api && npm run lint",
    "typecheck": "cd apps/api && npm run build",
    "seed": "cd apps/api && npm run prisma:seed",
    "reset:db": "cd apps/api && npx prisma migrate reset --force",
    "quality:check": "node scripts/quality-check.js",
    "format": "prettier --write \"**/*.{js,ts,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,yml,yaml}\"",
    "setup:check": "node scripts/dev-setup-check.js",
    "security:check": "node scripts/security-check.js",
    "security:audit": "npm audit --audit-level=moderate",
    "ci": "bash scripts/ci-check.sh",
    "docker:build": "docker compose -f docker/docker-compose.yml build",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:dev": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.dev.yml up -d",
    "docker:prod": "docker compose -f docker/docker-compose.prod.yml up -d",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chalk": "^5.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "playwright": "^1.55.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "apps/api/src/**/*.{ts,js}": [
      "prettier --write"
    ],
    "apps/web/src/**/*.{js,css,html}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
