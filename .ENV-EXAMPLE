# API Configuration
API_PORT=4000
NODE_ENV=development
JWT_SECRET=replace_me_with_strong_secret

# Database Configuration
DATABASE_URL=postgresql://synq:synq@localhost:5432/synqchain?schema=public

# File Storage Configuration
FILES_BASE_PATH=./data/files

# CORS Configuration
WEB_ORIGIN=http://localhost:5173

# Cookie Configuration
COOKIE_DOMAIN=

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME=15
ENABLE_2FA=false

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# Optional: Advanced Security (comma-separated IPs)
ENABLE_IP_WHITELIST=false
ALLOWED_IPS=
BLOCKED_IPS=

# Performance and Limits
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30s
DATABASE_CONNECTION_LIMIT=10

# Content Security Policy
CSP_REPORT_URI=
HSTS_MAX_AGE=31536000

# Azure Configuration (Production)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_NAME=
AZURE_APP_INSIGHTS_CONNECTION_STRING=
